<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<table>
  <thead>
    <tr>
      <th>Zacetek iskanja</th>
      <th>Nickname</th>
      <th>Server</th>
      <th>Main role</th>
      <th>Secondary role</th>
      <th>Ime priimek</th>
      <th>Favourite champion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.zacetek_iskanja %></td>
        <td><%= player.nickname %></td>
        <td><%= player.server %></td>
        <td><%= player.main_role %></td>
        <td><%= player.secondary_role %></td>
        <td><%= player.ime_priimek %></td>
        <td><%= player.favourite_champion %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

